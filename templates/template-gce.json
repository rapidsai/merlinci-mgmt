{
    "variables": {
      "source_image_family": "ubuntu-2004-lts",
      "machine_type": "e2-medium",
      "type": "cpu",
      "arch": "amd64",
      "key_file": "gce-key.json"
    },
    "builders": [
      {
        "type": "googlecompute",
        "account_file": "{{user `key_file`}}",
        "project_id": "rapids-gpuci",
        "machine_type": "{{user `machine_type`}}",
        "source_image_family": "{{user `source_image_family`}}",
        "zone": "us-central1-a",
        "image_description": "merlinCI {{user `type` | upper}}-{{user `arch` | upper}} Ubuntu 20.04",
        "image_name": "merlinci-{{user `type`}}-{{user `arch`}}-{{isotime | clean_resource_name}}",
        "disk_size": 20,
        "disk_type": "pd-ssd",
        "ssh_username": "ubuntu",
        "subnetwork": "gpuci-uscentral1",
        "network": "gpuci-vpc",
        "network_project_id": "rapids-gpuci"
      }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "bootstrap.sh",
            "execute_command": "sudo env {{ .Vars }} {{ .Path }}"
        },
        {
            "type": "ansible",
            "playbook_file": "playbook.yml",
            "groups": [
                "{{user `type`}}"
            ],
            "user": "ubuntu"
        },
        {
            "type": "shell",
            "script": "post_build.sh"
        }
    ]
}
